def greet(name):
    """
    This function greets to
    the person passed in as
    a parameter
    """
    print("Hello, " + name + ". Wellcome to your new home!")

def notarec(nota):
    """
    This function tells you the minimum grade 
    you need to achieve to be succeed 
    in the course
    """
    nota= int(nota)
    MinGrade = 12-nota
    print("You need to achieve at least " + MinGrade + " to be succeeded in your course.")



name = input()
greet(name)

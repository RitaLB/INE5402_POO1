while True:
    n = int(input())
    if n == 0:
        break
   
    mat = [0] * n
    for i in range(n):
        mat[i] = [0] * n
       
    for i in range(n):
        for j in range(n):
            mat[i][j] = 2 ** (i+j)
           
    s = str(2 ** (2*(n-1)))
    t = len(s)
   
    for i in range(n):
        print('%*d' % (t, mat[i][0]), end='')
        for j in range(1, n):
            print(' %*d' % (t, mat[i][j]), end='')
        print('')
    print('')


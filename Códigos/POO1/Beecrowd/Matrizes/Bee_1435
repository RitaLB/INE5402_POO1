while True:
    n = int(input())
    if n == 0:
        break
    
    m = [1] * n
    for i in range(n):
        m[i] = [1] * n
    
    for k in range(1, n -1):
        for i in range(k, n - k):
            for j in range(k, n - k):
                m[i][j] += 1
                    
            
    for i in range(n):
        for j in range(n - 1):
            print('%3d' % m[i][j], end=' ')
        print('%3d' % m[i][n-1])
    print('')
